<div class="page-header">
  <h1 class="text-center">社員新規登録画面</h1>
</div>

<div class="col-sm-10 col-md-8 mx-auto">
  <%= form_with model: @employee, url: admin_employees_path do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name,  class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :name_kana %>
      <%= form.text_field :name_kana,  class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :gender %>
      <%= form.select :gender, Employee.genders_i18n.invert, {}, class: "form-control form-select col-sm-10 col-md-5" %>
    </div>

    <div class="form-group">
      <%= form.label :birth_date %>
      <div class="d-flex align-items-center">
        <%= form.select :birth_date_year, [*1900..Time.current.year].reverse, {}, class: "form-control form-control col-4 col-md-3 col-lg-2" %>
        <span class="d-block px-1">年</span>
        <%= form.select :birth_date_month, [*1..12], {}, class: "form-control col-3 col-md-2 col-lg-1" %>
        <span class="d-block px-1">月</span>
        <%= form.select :birth_date_day, [*1..31], {}, class: "form-control col-3 col-md-2 col-lg-1" %>
        <span class="d-block px-1">日</span>
      </div>
    </div>
    <!-- join_date -->
    <div class="form-group">
      <%= form.label :join_date %>
      <div class="d-flex align-items-center">
        <%= form.select :join_date_year, [*2019..Time.current.year].reverse, {}, class: "form-control form-control col-4 col-md-3 col-lg-2" %>
        <span class="d-block px-1">年</span>
        <%= form.select :join_date_month, [1..12], {}, class: "form-control col-3 col-md-2 col-lg-1" %>
        <span class="d-block px-1">月</span>
        <%= form.select :join_date_day, [1..31], {}, class: "form-control col-3 col-md-2 col-lg-1" %>
        <span class="d-block px-1">日</span>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :employment_type %>
      <%= form.select :employment_type, Employee.employment_types_i18n.invert, {}, class: "form-control col-sm-10 col-md-5" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email,  class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_digest %>
      <%= form.password_field :password_digest,  class: "form-control" %>
    </div>

    <div class="my-3">
      <%= form.submit "登録", class: "btn btn-primary btn-lg btn-block col-10 col-md-8 col-lg-4 mx-auto" %>
    </div>
  <% end %>
</div>